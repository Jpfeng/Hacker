@import 'color'

header {
  line-height: 1rem;

  .site-branding {
    text-align: center;
    margin-bottom: 2rem;
    font-family: Comic Sans MS, Comic Sans, Bradley Hand, Apple Chancery, cursive;
    letter-spacing: 0.2em;

    .site-title {
      margin: 0;
      font-size: 2.4rem;
      font-style: italic

      a {
        display: inline-block;
        color: $textBrand;
        font-weight: bold;
        background-color: $themeRed;
        line-height: 2.6rem;
        height: 3.2rem;
        padding: 0.2rem 1.5rem;
        -webkit-transition: padding 0.3s ease-out;
        transition: padding 0.3s ease-out;

        &:hover {
          padding: 0.2rem 3rem;
        }
      }
    }

    .site-description {
      color: $textTime;
      font-size: 1.6rem;
      margin: 0.4em 0 0;
    }
  }

  .site-navigation {
    text-align: center;

    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      font-size: 1.6em;

      li {
        display: inline-block;
        margin: 0 0.5rem;

        a {
          display: block;
          color: $textTimeHover;
          font-size: 1.6rem;
          line-height: 2rem;
          padding: 0 1rem;

          &:hover {
            color: $textTime;
          }
        }
      }
    }
  }
}
