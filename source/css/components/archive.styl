@import 'color'
article.archive {
  padding: 0;
  margin: 2em auto;
}

.archive-post {
  text-align: center;
  margin: 4em auto;

// 存档页，标题
  .archive-title {
    font-size: 2.2em;
    line-height: 1.25;
    position: relative;
    margin: 0;

    a {
      color: $textTitle;

      span {
        padding-bottom: 6px;
        -webkit-transition: box-shadow 0.15s;
        transition: box-shadow 0.15s;
        box-shadow: inset 0 -2px 0 rgba(170, 44, 32, 0);
      }

      &:hover {
        color: $textTitleHover;

        span {
          box-shadow: inset 0 -2px 0 rgba(170, 44, 32, 0.6);
        }
      }
    }
  }

// 存档页，时间 
  time {
    font-style: italic;

    a {
      font-size: 1.6rem;
      color: $textTime;

      &:before {
        content: '#';
      }

      &:hover {
        color: $textTimeHover;
      }
    }
  }
}
